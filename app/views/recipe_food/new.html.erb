<div class="container">
<%= form_with model:@new_recipe_food,url: user_recipe_recipe_food_index_path, method: :post, local: true  do |form| %>
 <div class="d-flex flex-column mb-3">
       <%= form.label :food_id, "food", class:"form-label" %>
       <%= form.collection_select :food_id, Food.order(:name),:id,:name, include_blank: true, class:"form-select" %>
   </div>
     <div class="mb-3">
       <%= form.label :quantity, class:"form-label" %>
       <%= form.number_field :quantity, class:"form-control" %>
   </div>
    <%= form.submit "Add Ingradiant" ,class:  "btn btn-primary" %>
<% end %>
     </div>

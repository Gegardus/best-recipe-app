<div class="recipes-new-c">
  <h3 class='recipes-new-h3'> Add Recipe</h3>
  <%= form_with model:@new_recipe,url: user_recipes_path(current_user), method: :post, local: true  do |form| %>
  <div class="foods-new-div">
      <%= form.label :name ,class: "form-label" %>
      <%= form.text_field :name ,class: "form-control" %>
  </div>
  <div class="foods-new-div">
      <%= form.label :preparation_time ,class: "form-label" %>
      <%= form.text_field :preparation_time ,class: "form-control" %>
   </div>
   <div class="foods-new-div">
      <%= form.label :cooking_time ,class: "form-label" %>
      <%= form.text_field :cooking_time ,class: "form-control " %>
   </div>
   <div class="foods-new-div">
     <%= form.label :description ,class: "form-label" %>
     <%= form.text_area :description ,class: "form-control text-area" %>
   </div>
   <div class="foods-new-div">
     <%= form.check_box  :public , { checked: true }, true, false  %>
     <%= form.label :public ,class: "form-label " %>
   </div>
    <%= form.submit "Add new recipe", class: "foods-new-btn" %>
  <% end %>
</div>
<%= link_to "Create new recipe", new_user_recipe_path(current_user.id), class: "btn btn-primary" %>

<div class="container card-box">

<% @recipes.each_with_index do |recipe , index|%>
 <div class="card" style="width: 18rem;">
<%= link_to recipe.name,"/users/#{recipe.user_id}/recipes/#{recipe.id}",class:"card-link"%>
<%= button_to "Delete 🗑️", user_recipe_path(user_id:recipe.user_id,id: recipe.id) ,method: :delete,class:"btn btn-danger" %>
<div class="card-body">
<h5 class="card-title">Description for the recipe.</h5>
<div class="card-text"> <%=recipe.description%></div>
</div>
</div>

<%end%>
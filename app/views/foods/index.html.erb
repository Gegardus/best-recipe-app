<div class="container">
<div class="foods-c">  
<h3 class="foods-h3">All Foods</h1>
  <div class="d-flex justify-content-end m-3">
      <%= link_to 'Add new food', new_user_food_path, class: "btn btn-primary" %>
  </div>
  <table class="table m-3">
    <thead>
        <tr>
        <th scope="col">Food</th>
        <th scope="col">Measurement Unit</th>
        <th scope="col">Unit Price</th>
        <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
        <th scope="row"> <%= food.name %> </th>
        <td> <%= food.measurement_unit %> </td>
        <td>$<%= food.price %> </td>   
         <td> 
            <% if can? :manage, food %>
            <%= button_to "Delete",user_food_path( user_id:current_user.id,id:food.id ), :method => :delete, class: "btn btn-danger" %> 
            <% end %>
        </td>     
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>

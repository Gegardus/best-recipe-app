<div class="container">

<% @public_recipe.each_with_index do |recipe , index|%>

<div class="card" >
  <div class="card-header ">
        <%=recipe.name%>
  </div>
  <div class="card-body d-flex justify-content-between width=100%">
    <div>
    <h5 class="card-title"><%=recipe.name%></h5>
    <p class="card-text">By:  <%=recipe.user.name%></p>
    <%= link_to recipe.name, user_recipe_public_path(user_id:current_user.id,id:recipe.id),class:"btn btn-primary"%>
    </div>
    <div>
    </div>
  </div>
</div>
<%end%>
</div >
